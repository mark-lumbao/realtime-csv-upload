{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "./lib",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "lib"]
}
